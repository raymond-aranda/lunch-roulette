<div class="text-center invitation">
  <% @accepted_all.each do |row| %>
    <% if row.accepted == false && @accepted_all.last.accepted == false %>
      <%= row.group.name %>
      <%= link_to 'Accept', accept_path(row), method: :put, class: 'btn btn-primary' %>
      <%= link_to 'Decline', decline_path(row), method: :delete, data: { confirm: 'Are You Sure?' }, class: 'btn btn-danger' %>
      <% break %>
    <% end %>
  <% end %>
</div>
<div class="jumbotron text-center mb-0" id="header">
  <div class="header-container">
    <h1 class="display-4">Lunch Roulette</h1>
    <p class="lead">The deciding factor when it comes to choosing what your group should eat!</p>
    <div class="text-center">
      <%= link_to 'My Groups', groups_users_path, class: 'btn btn-primary' %>
    </div>
  </div>
</div>
